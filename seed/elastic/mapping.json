{
    "settings": {
	"index.mapping.ignore_malformed": true,

	"analysis": {
	    "filter": {
		"english_stop": {
		    "type":       "stop",
		    "stopwords":  "_english_"
		},
		"english_keywords": {
		    "type":       "keyword_marker",
		    "keywords":   []
		},
		"english_stemmer": {
		    "type":       "stemmer",
		    "language":   "english"
		},
		"english_possessive_stemmer": {
		    "type":       "stemmer",
		    "language":   "possessive_english"
		},
		"search_synonyms" : {
		    "type" : "synonym_graph",
		    "synonyms_path" : "synonyms.txt"
		}
	    },
	    "analyzer": {
		"english_and_synonyms": {
		    "tokenizer": "standard",
		    "filter": [
			"english_possessive_stemmer",
			"lowercase",
			"english_stop",
			"english_keywords",
			"english_stemmer",
			"search_synonyms"
		    ]
		}
	    }
	}
    },

    "mappings": {
	"doc": {
	    "date_detection": false,
	    "properties": {

		"Package": {
		    "type": "text",
		    "analyzer": "english_and_synonyms",
		    "fields": {
			"raw": {
			    "type": "keyword"
			}
		    }
		},

		"Title": {
		    "type": "text",
		    "analyzer": "english_and_synonyms"
		},

		"Version": {
		    "type": "keyword"
		},

		"Author": {
		    "type": "keyword"
		},

		"Maintainer": {
		    "type": "keyword"
		},

		"Description": {
		    "type": "text",
		    "analyzer": "english_and_synonyms"
		},

		"License": {
		    "type": "keyword"
		},

		"URL": {
		    "type": "keyword"
		},

		"BugReports": {
		    "type": "keyword"
		},

		"Date": {
		    "type": "keyword"
		},

		"date": {
		    "type": "date"
		},

		"revdeps": {
		    "type": "long"
		},

		"downloads": {
		    "type": "long"
		}
	    },

	    "dynamic_templates": [{
		"strings_as_text": {
		    "match_mapping_type": "string",
		    "mapping": {
			"type": "text"
		    }
		}
	    }]
	}
    }
}
